# ==========================================
# BACKEND ENVIRONMENT VARIABLES
# ==========================================
# Copy this file to .env and fill in your actual values

# ==========================================
# DATABASE
# ==========================================
# MongoDB Connection String
# For local: mongodb://localhost:27017/hotel
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/hotel?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/hotel

# ==========================================
# SERVER CONFIGURATION
# ==========================================
# Port for backend server
PORT=3000

# Environment: development, production
NODE_ENV=development

# ==========================================
# SESSION CONFIGURATION
# ==========================================
# Secret key for session encryption (use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_very_secure_random_secret_key_here_change_this_in_production

# ==========================================
# CLOUDINARY (File Upload Service)
# ==========================================
# Get these from: https://cloudinary.com/console
CLOUD_NAME=your_cloudinary_cloud_name
API_KEY=your_cloudinary_api_key
API_SECRET=your_cloudinary_api_secret

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Frontend URL for CORS (only needed in development with separate frontend server)
# In production with unified deployment, this is not needed
FRONTEND_URL=http://localhost:5173

# ==========================================
# GOOGLE OAUTH (For Frontend Build)
# ==========================================
# Google OAuth Client ID (needed when building frontend from backend)
# Get from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
