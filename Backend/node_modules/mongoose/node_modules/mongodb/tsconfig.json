{
  "compilerOptions": {
    // Basic Configuration
    "allowJs": true,
    "checkJs": false, // Keep it false since you allow JS but likely only want type checking on TS files
    "strict": true,
    "alwaysStrict": true,

    // Module and Target
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2021",
      "es2022",
      "esnext"
    ],
    "types": ["node"],

    // Output and Emission (The Main Correction)
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // ⚠️ CRITICAL CORRECTION: Allows compilation output (.js and .d.ts) even if there are type errors. 
    // This is safer for library builds where declarations are essential.
    "noEmitOnError": false, 

    // Helper/Source Settings
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    
    // Redundant/Deprecated Helper options removed:
    // "importHelpers": false, // Usually set to true if 'tslib' is used
    // "noEmitHelpers": true, // Covered by not using 'importHelpers'

    // Strict Checks
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "useUnknownInCatchVariables": false
  },
  
  "ts-node": {
    "transpileOnly": true,
    "compiler": "typescript-cached-transpile"
  },
  
  "include": [
    "src/**/*"
  ]
}